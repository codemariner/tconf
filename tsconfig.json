{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"esModuleInterop": true,
		"lib": ["ES2022"],
		"module": "ES2022",
		"moduleResolution": "bundler",
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"inlineSourceMap": true,
		"resolveJsonModule": true,
		"target": "ES2022",
		"typeRoots": ["./node_modules/@types", "./src/@types/"]
	},
	"include": ["src/**/*"]
}
