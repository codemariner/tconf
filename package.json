{
	"name": "tconf",
	"version": "2.1.2",
	"description": "Heirarchical configuration with environment variable coercion and type validation.",
	"author": "Scott Sayles",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"repository": {
		"type": "git",
		"url": "https://github.com/codemariner/tconf"
	},
	"engines": {
		"node": ">=12.0.0"
	},
	"config": {
		"prettier": "**/*.{graphql,js,json,css,jsx,mjs,ts,tsx,yaml,yml}"
	},
	"scripts": {
		"test": "jest --color --verbose --coverage",
		"test:watch": "npm run test -- --watch",
		"lint": "eslint . --ext .ts,.js",
		"prettier": "prettier  --write \"$npm_package_config_prettier\"",
		"prettier:check": "prettier  --list-different \"$npm_package_config_prettier\"",
		"build": "tsc",
		"build:test": "tsc --project test --noEmit",
		"clean": "del-cli -f dist && del-cli -f coverage",
		"prepublishOnly": "del-cli -f coverage"
	},
	"license": "ISC",
	"devDependencies": {
		"@types/bluebird": "3.5.36",
		"@types/debug": "4.1.7",
		"@types/deepmerge": "2.2.0",
		"@types/jest": "26.0.20",
		"@types/js-yaml": "4.0.0",
		"@types/node": "14.14.25",
		"@typescript-eslint/eslint-plugin": "4.14.0",
		"@typescript-eslint/parser": "4.14.0",
		"del-cli": "3.0.1",
		"eslint": "7.32.0",
		"eslint-config-airbnb-base": "14.2.1",
		"eslint-config-prettier": "7.2.0",
		"eslint-plugin-import": "2.22.1",
		"eslint-plugin-jest": "24.1.3",
		"husky": "5.1.3",
		"jest": "26.6.3",
		"lint-staged": "10.5.4",
		"prettier": "2.2.1",
		"prettier-eslint-cli": "5.0.1",
		"ts-jest": "26.5.2",
		"ts-node": "10.4.0",
		"typescript": "4.5.2"
	},
	"dependencies": {
		"bluebird": "^3.7.2",
		"debug": "^4.3.1",
		"deepmerge": "^4.2.2",
		"js-yaml": "^4.1.0",
		"json5": "^2.2.0",
		"runtypes": "^6.5.0"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{ts,js,json,yaml,yml}": [
			"eslint --cache --fix",
			"prettier --write",
			"git add"
		]
	},
	"keywords": [
		"config",
		"configuration",
		"env",
		"typescript",
		"runtypes",
		"12-factor"
	]
}
